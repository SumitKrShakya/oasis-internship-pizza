<title>Cart</title>

<section class="cart pt-16">
    <% if(session.cart) { %>
        <div class="order container mx-auto xl:w-1/2">
            <div class="items-center flex border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bold text-2xl ml-4">Order Summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="<%= pizza.item.image %>" alt="">
                        <div class="ml-4 flex-1">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span class="uppercase text-xs">
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty %> Pcs
                        </span>
                        <span class="font-bold block text-lg">
                            <%= (pizza.item.price * pizza.qty).toFixed(2) %> â‚¹
                        </span>
                        <button class="mx-4 md:mx-0 md:ml-12 font-bold" id="deleteCartButton" data-pizza-id="<%= pizza.item._id %>">Delete</button>
                    </div>
                    <% } %>
            </div>
            <hr>
            <div class="text-center md:text-right py-4">
                <div>
                    <span class="font-bold text-lg">Total Amount: </span>
                    <span class="amount text-2xl font-bold md:ml-2">
                        <%= (session.cart.totalPrice).toFixed(2) %> â‚¹
                    </span>
                </div>
                <% if(user) { %>
                    <div>
                        <form action="/customer/orders" method="POST" class="mt-12" id="payment-form">
                            <div class="relative w-1/2 ml-auto mb-4">
                                <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-3 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                                    <option value="cod">Cash on delivery</option>
                                    <option value="card">Pay with card</option>
                                </select>
                                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                        <path
                                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                    </svg>
                                </div>
                            </div>
                            <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="number" placeholder="Phone number" required>
                            <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address" required>
                            <div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order
                                    Now</button>
                            </div>
                        </form>
                    </div>
                    <% } else { %>
                        <a class="inline-block cursor-pointer btn-primary mt-4 px-6 py-2 rounded-full text-white font-bold mt-6" href="/auth/login">Login to continue</a>
                        <% } %>
            </div>
        </div>
        <%} else { %>
            <div class="empty-cart">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
                    <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet. <br> To order a pizza, go to the main page.</p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
                    <a href="/#menu" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Order
                        Now</a>
                </div>
            </div>
            <% } %>
</section>